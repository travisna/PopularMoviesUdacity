<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Details">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/movies_title"
            android:padding="20dp"
            android:textColor="@color/cardview_light_background"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/cardview_dark_background"
            android:visibility="visible"/>
        <ImageView
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:id="@+id/movies_images"
            android:layout_below="@+id/movies_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="visible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:text=""
            android:id="@+id/movies_year"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignTop="@+id/movies_images"
            android:layout_toRightOf="@+id/movies_images"
            android:visibility="visible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/movies_rating"
            android:visibility="visible"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/movies_year"
            android:layout_alignLeft="@+id/movies_year"
            android:layout_alignStart="@id/movies_year"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:layout_below="@id/movies_images"
            android:background="@color/cardview_dark_background"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/black_bar"
            android:visibility="visible"/>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/black_bar"
            android:layout_alignLeft="@id/black_bar"
            android:layout_alignStart="@id/black_bar"
            android:layout_alignRight="@id/black_bar"
            android:layout_alignEnd="@id/black_bar"
            card_view:cardCornerRadius="4dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/movies_overview"
                android:visibility="visible"/>
        </android.support.v7.widget.CardView>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:layout_below="@id/movies_images"
            android:background="@color/cardview_dark_background"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/black_bar_2"
            android:visibility="visible"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="Mark as Favorite"
            android:layout_below="@+id/movies_rating"
            android:layout_alignLeft="@+id/movies_rating"
            android:layout_alignStart="@+id/movies_rating"
            android:theme="@android:style/Theme.Holo"/>
    </RelativeLayout>
</ScrollView>
